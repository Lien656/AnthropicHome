#:kivy 2.3.0

<RootLayout>:
    orientation: "vertical"
    padding: dp(10)
    spacing: dp(10)

    canvas.before:
        Color:
            rgba: 0.18, 0.18, 0.18, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "AnthropicHome"
        color: 1, 1, 1, 1
        font_size: "22sp"
        size_hint_y: None
        height: dp(48)

    ScrollView:
        do_scroll_x: False

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(8)

            Label:
                text: "Если ты это видишь — приложение ЖИВО."
                color: 1, 1, 1, 1
                size_hint_y: None
                height: self.texture_size[1] + dp(20)

    BoxLayout:
        size_hint_y: None
        height: dp(56)
        spacing: dp(8)

        TextInput:
            hint_text: "Написать…"
            multiline: True
            background_color: 0, 0, 0, 0
            foreground_color: 1, 1, 1, 1

        Button:
            text: "➤"
            size_hint_x: None
            width: dp(56)